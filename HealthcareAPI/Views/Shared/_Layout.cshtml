<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  Healthcare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthcareAPI.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        .nav-link:hover {
            color: #ff5722; 
            background-color: #3E5879; 
            transition: all 0.3s ease; 
            border-radius: 10px
        }

        .datepicker {
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .datepicker-dropdown {
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            cursor: pointer;
        }

        .datepicker table td.day {
            cursor: pointer;
        }

        .datepicker table td.day:hover {
            background-color: #007bff; 
            color: white; 
            border-radius: 50%; 
            transition: background-color 0.3s, color 0.3s;
        }

        .datepicker table td.active {
            background-color: #007bff !important; 
            color: white !important; 
            border-radius: 50%;
        }
  
        .datepicker table td.today:hover {
            background-color: #28a745; 
            color: white;
            border-radius: 50%;
        }

        .datepicker table td {
            padding: 8px;
        }

            
        .datepicker table td.day:hover {
            background-color: #007bff; 
            color: white; 
            border-radius: 50%;
            transition: background-color 0.3s, color 0.3s;
        }

        
        .datepicker table td.active {
            background-color: #007bff !important; 
            color: white !important; 
            border-radius: 50%; 
        }

        
        .datepicker table td.today {
            background-color: #28a745; 
            color: white;
            border-radius: 50%;
        }

            
        .datepicker table {
        border-spacing: 5px; 
        }

        
        .datepicker table td.month,
        .datepicker table td.year {
            padding: 15px; 
            width: 80px; 
            text-align: center; 
        }

        
        .datepicker table td.month:hover,
        .datepicker table td.year:hover {
            background-color: #007bff; 
            color: white; 
            border-radius: 5px; 
            transition: background-color 0.3s, color 0.3s;
        }
          
          
    </style>
</head>
<body style="background-color: #F5EFE7">
    <header>
        <nav style="background-color: #213555" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light fs-5 border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white fs-3" asp-area="" asp-controller="Home" asp-action="Index">Healthcare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ms-5">
                    <ul class="navbar-nav flex-grow-1 flex gap-5 ms-5">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Patient" asp-action="Index">Patients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Doctor" asp-action="Index">Doctors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Prescription" asp-action="Index">Prescription</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Healthcare - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.5/jquery.validate.unobtrusive.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Datepicker JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
